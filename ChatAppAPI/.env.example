# ========================================
# ChatApp Environment Configuration
# ========================================
# Copy this file to .env and update with your own values
# DO NOT commit .env file to git (it's in .gitignore)

# ========================================
# Docker Configuration
# ========================================
# Your Docker Hub username (required to pull images)
DOCKER_USERNAME=hazemhassan1
IMAGE_TAG=latest

# ========================================
# Database Configuration
# ========================================
DB_SERVER=sqlserver
DB_PORT=1433
DB_NAME=ChatAppDB
DB_USER=sa
# IMPORTANT: Use a strong password (min 8 chars, uppercase, lowercase, numbers, symbols)
DB_PASSWORD=YourStrongPassword123!

# External port to access SQL Server from host machine
DB_EXTERNAL_PORT=15000

# ========================================
# JWT Authentication Settings
# ========================================
# IMPORTANT: Generate a strong random secret (min 32 characters recommended)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=YourVeryLongAndSecureJWTSecretKeyThatIsAtLeast32CharactersLong
JWT_ISSUER=ChatAppAPI
JWT_AUDIENCE=ChatAppClient

# ========================================
# Application Ports
# ========================================
# Port to access the API from host machine
API_EXTERNAL_PORT=44000

# Port to access the UI from host machine
UI_EXTERNAL_PORT=5000